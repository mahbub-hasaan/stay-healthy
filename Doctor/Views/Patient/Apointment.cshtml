@model Doctor.ViewModel.AppointmentView
@{
    ViewBag.Title = "Apointment";
}
@Html.Partial("_nav");
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<div class="container">
    <div class="row">
        <div class="col-md-5 mx-auto d-block shadow-lg p-3 mb-5 bg-white rounded ">
            @if (ViewBag.Status == false)
            {
                <div class="alert-danger"><h5>@ViewBag.Message</h5></div>
            }
            <div class="card text-center mx-auto d-block" style="width: 18rem;">
                <img class="card-img-top" src="@Url.Content(Model.Doctorses.doctorImagePath)" alt="Card image cap">
                <div class="card-body">

                    <h5 class="card-title">@Model.Doctorses.doctorName</h5>
                    <p class="card-text">@Model.Doctorses.doctorDegree</p>
                </div>
            </div>
            <h1 class="h1 text-center"> Information </h1>
            @using (Html.BeginForm("Apointment", "Patient", new { @id = Model.Doctorses.Id, @pId = @Model.Patient.Id }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group">
                    @Html.LabelFor(model => model.Appointment.bp)
                    @Html.TextBoxFor(model => model.Appointment.bp, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Appointment.bp, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Appointment.Problem)
                    @Html.TextAreaFor(model => model.Appointment.Problem, new { @class = "form-control", @placeholder = "Enter your problem" })
                    @Html.ValidationMessageFor(model => model.Appointment.Problem, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Appointment.Weight)

                    @Html.TextBoxFor(model => model.Appointment.Weight, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Appointment.Weight, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Appointment.runningMedicine)
                    @Html.CheckBoxFor(model => model.Appointment.runningMedicine, new { @class = "ml-xl-5" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Make your Appointment" class="btn btn-outline-success mx-auto d-block" />
                </div>
            }
        </div>
    </div>


</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
